				<tab label="Tab3" />
				<tab label="Tab4" />
				<tab label="Tab5" />
			</tabs>
			<tabpanels>
				<tabpanel>Tabpanel Content 1</tabpanel>
				<tabpanel>Tabpanel Content 2</tabpanel>
