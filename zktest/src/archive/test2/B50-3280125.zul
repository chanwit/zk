<zk>
	<html><![CDATA[
		<ol>
			<li>IE8 only.</li>
			<li>Check the scrollbar.</li>
			<li>There are only one scroll bar in grid and listbox.</li>
		</ol>
	]]></html>
	<grid width="400px">
		<columns>
			<column label="column ${each}" forEach="1,2,3,4,5,6,7,8,9" width="200px"/>
		</columns>
		<frozen columns="1"/>
		<rows>
			<row forEach="1,2,3,4,5">
				<label value="item ${each}" forEach="1,2,3,4,5,6,7,8,9"/>
			</row>
		</rows>
	</grid>
	<listbox width="400px">
		<listhead>
			<listheader label="column ${each}" forEach="1,2,3,4,5,6,7,8,9" width="200px"/>
		</listhead>
		<frozen columns="1"/>
		<listitem forEach="1,2,3,4,5">
			<listcell label="item ${each}" forEach="1,2,3,4,5,6,7,8,9"/>
		</listitem>
	</listbox>
</zk>
