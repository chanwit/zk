<zk>
	<div>
		The spacing of Hlayout and Vlayout should be 5px.
	</div>
	<style>
		.z-hlayout-inner {
			padding-right: 5px;
		}
		.z-vlayout-inner {
			padding-bottom: 5px;
		}
	</style>
	Hlayout:
	<hlayout spacing="auto">
		<div width="50px" style="border: 1px solid green">Div 1</div>
		<div width="50px" style="border: 1px solid green">Div 2</div>
	</hlayout>
	Vlayout:
	<vlayout spacing="auto">
		<div width="50px" style="border: 1px solid green">Div 1</div>
		<div width="50px" style="border: 1px solid green">Div 2</div>
	</vlayout>
</zk>
