	<![CDATA[//@DECLARATION
	Row row1;
	Row row2;
	void addNewGroup(){
		Group group = new Group("Group1");
		row1 = new Row();
		new Label("row1-1").setParent(row1);
		newGrid(3).setParent(row1);
		new Label("row1-3").setParent(row1);
		row2 = new Row();
		new Label("row2-1").setParent(row2);
		new Label("row2-2").setParent(row2);
		newGrid(3).setParent(row2);
		group.setOpen(false);
		myrows.getChildren().add(12,row2);
		myrows.getChildren().add(12,row1);
		myrows.getChildren().add(12,group);
	}
	
	Grid newGrid(int rowc){
		Grid grid = new Grid();
		grid.setSizedByContent(true);
		Columns cols = new Columns();
		new Column("c1").setParent(cols);
		new Column("c2").setParent(cols);
		new Column("c3").setParent(cols);
		cols.setParent(grid);
		
		Rows rows = new Rows();
		rows.setParent(grid);
		new Group("inner group ").setParent(rows);
		for(int i=0;i<rowc;i++){
			Row row = new Row();
			new Button("row"+i+" 1").setParent(row);
			new Textbox("row"+i+" 3").setParent(row);
			Detail detail = new Detail();
			detail.setStyle("background-color:red");
			new Label("row"+i+" 2").setParent(detail);
			detail.setParent(row);
			row.setParent(rows);
		}
		Groupfoot foot = new Groupfoot("inner foot");
		foot.setParent(rows);
		foot.setSpans("3");
		return grid;
	}

	void addDetail(){
		Detail detail = new Detail();
		Hbox box1 = new Hbox();
		box1.setWidth("100%");
		box1.setPack("stretch");
		box1.setParent(detail);
		newGrid(3).setParent(box1);
		new Button("detail 1-2").setParent(box1);
		detail.setParent(row1);
		
		detail = new Detail();
		Vbox box2 = new Vbox();
		box2.setParent(detail);
		new Textbox("detail 2-1").setParent(box2);
		newGrid(3).setParent(box2);
		detail.setParent(row2);
	}
	]]>
