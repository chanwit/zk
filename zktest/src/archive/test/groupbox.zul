<window width="100%">
	<caption id="wndcap" label="Groupbox Test">
		<toolbarbutton label="Click"/>
	</caption>
	<groupbox width="500px" mold="3d" id="gb">
		<caption label="Groupbox" id="gbcap">
			<button label="Press" onClick="alert(&quot;Press&quot;)"/>
			<toolbarbutton label="Hello" onClick="alert(&quot;Hello&quot;)"/>
		</caption>
		This is a group box
	</groupbox>
	<button label="Add button to caption" onClick='gbcap.appendChild(new Button("btn"))'/>
	<button label="set height" onClick='gb.height = "200px"'/>
</window>
