<language-addon>
	<!-- The name of this addon. It must be unique -->
	<addon-name>zkex</addon-name>
	<!-- Specifies what other addon this depends
	<depends></depends>
	-->

	<!-- Which language this addon will be added to -->
	<language-name>xul/html</language-name>
	
	<stylesheet href="~./zkex/zul/css/layout.css.dsp" type="text/css"/>

	<version>
		<version-class>org.zkoss.zkex.Version</version-class>
		<version-uid>3.0.10</version-uid>
		<zk-version>3.0.10</zk-version><!-- or later -->
	</version>

	<zscript language="Java">
	import org.zkoss.zkex.zul.*;
	</zscript>
	
	<component>
		<component-name>borderlayout</component-name>
		<component-class>org.zkoss.zkex.zul.Borderlayout</component-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>~./zkex/zul/html/borderlayout.dsp</mold-uri>
		</mold>
	</component>	
	<component>
		<component-name>captcha</component-name>
		<extends>captcha</extends>

		<custom-attribute>
			<attribute-name>captcha-engine</attribute-name>
			<attribute-value>org.zkoss.zkex.zul.impl.JHLabsCaptchaEngine</attribute-value>
		</custom-attribute>
	</component>
	<component>
		<component-name>center</component-name>
		<component-class>org.zkoss.zkex.zul.Center</component-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>~./zkex/zul/html/layoutregion.dsp</mold-uri>
		</mold>
	</component>
	<component>
		<component-name>chart</component-name>
		<extends>chart</extends>

		<custom-attribute>
			<attribute-name>chart-engine</attribute-name>
			<attribute-value>org.zkoss.zkex.zul.impl.JFreeChartEngine</attribute-value>
		</custom-attribute>
	</component>	
	<component>
		<component-name>east</component-name>
		<component-class>org.zkoss.zkex.zul.East</component-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>~./zkex/zul/html/layoutregion.dsp</mold-uri>
		</mold>
	</component>
	<component>
		<component-name>jasperreport</component-name>
		<component-class>org.zkoss.zkex.zul.Jasperreport</component-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>~./zkex/zul/html/jasperreport.dsp</mold-uri>
		</mold>
	</component>
	<component>
		<component-name>north</component-name>
		<component-class>org.zkoss.zkex.zul.North</component-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>~./zkex/zul/html/layoutregion.dsp</mold-uri>
		</mold>
	</component>	
	<component>
		<component-name>south</component-name>
		<component-class>org.zkoss.zkex.zul.South</component-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>~./zkex/zul/html/layoutregion.dsp</mold-uri>
		</mold>
	</component>
	<component>
		<component-name>west</component-name>
		<component-class>org.zkoss.zkex.zul.West</component-class>
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>~./zkex/zul/html/layoutregion.dsp</mold-uri>
		</mold>
	</component>
</language-addon>
